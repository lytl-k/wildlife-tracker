<% provide(:title, "Edit Sighting") %>
<div class="container">
  <h1>Edit Sighting</h1>

  <% flash[:notice]&.each do |msg| %>
    <div class="alert alert-danger">
      <%= msg %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for :sighting, method: :patch do |f| %>

        <%= f.label :animal_id, 'Animal' %>
        <%= f.select :animal_id, @animals.collect { |at| [at.name, at.id] }, {}, { class: 'form-control' } %>

        <%= f.label :region_id, 'Region' %>
        <%= f.select :region_id, @regions.collect { |at| [at.name, at.id] }, {}, { class: 'form-control' } %>

        <%= f.label :longitude, 'Longitude' %>
        <%= f.text_field :longitude, class: 'form-control' %>

        <%= f.label :latitude, 'Latitude' %>
        <%= f.text_field :latitude, class: 'form-control' %>

        <%= f.text_field :user_id, value: @user.id, hidden: true %>

        <div>
          <br>
          <%= f.submit "Update", class: "col-md-3 btn btn-primary" %>
          <div class="col-md-6"></div>
          <%= link_to "Back", '/home', class: "col-md-3 btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% provide(:title, "Animals") %>
<div class="container">
  <h1>Animals</h1>

  <% flash[:notice]&.each do |msg| %>
    <div class="alert alert-danger">
      <%= msg %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <table class="table table-bordered">
        <thead>
          <tr>
          <th>Name</th>
          <th>Type</th>
          <th></th>
        </tr>
        </thead>
        <% @animals.each do |animal| %>
          <tbody>
            <tr>
              <td><%= animal.name %></td>
              <td><%= animal.animal_type.name %></td>
              <td>
                <%= link_to "Edit", "/animals/#{animal.id}/edit", class: "btn btn-primary" %>
                <%= link_to "Delete", "/animals/#{animal.id}", class: "btn btn-primary", method: :delete %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
      <div>
        <br>
        <%= link_to "New", '/animals/new', class: "col-md-3 btn btn-primary" %>
        <div class="col-md-6"></div>
        <%= link_to "Back", '/home', class: "col-md-3 btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
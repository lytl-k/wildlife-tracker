<% provide(:title, "Edit Animal") %>
<div class="container">
  <h1>Edit Animal</h1>

  <% flash[:notice]&.each do |msg| %>
    <div class="alert alert-danger">
      <%= msg %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for :animal, method: :patch do |f| %>

        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :animal_type_id, 'Animal Type' %>
        <%= f.select :animal_type_id, @animal_types.collect { |at| [at.name, at.id] }, {}, { class: 'form-control' } %>

        <div>
          <br>
          <%= f.submit "Update", class: "col-md-3 btn btn-primary" %>
          <div class="col-md-6"></div>
          <%= link_to "Back", '/animals', class: "col-md-3 btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
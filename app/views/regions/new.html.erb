<% provide(:title, "New Region") %>
<div class="container">
  <h1>New Region</h1>

  <% flash[:notice]&.each do |msg| %>
    <div class="alert alert-danger">
      <%= msg %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for :region, url: { action: :create } do |f| %>

        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'form-control' %>

        <div>
          <br>
          <%= f.submit "Create", class: "col-md-3 btn btn-primary" %>
          <div class="col-md-6"></div>
          <%= link_to "Back", '/home', class: "col-md-3 btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>